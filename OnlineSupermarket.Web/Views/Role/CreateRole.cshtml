@model OnlineSupermarket.Domain.CreateRoleViewModel
@{
    ViewData["Title"] = "Create New Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h1 class="m-4">Create New Role</h1>
    @Html.ValidationSummary()
    <form asp-action="CreateRole" asp-controller="Role" method="post">

        <div class="registerdiv">
            <div class="form-group col-sm-12">
                <label asp-for="@Model.RoleName" class="col-lg-3 control-label"></label>
                <br>
                <div class="col-lg-9">
                    @Html.TextBoxFor(m => m.RoleName, new { placeholder = "Role Name", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.RoleName)
                </div>
            </div>



            <div class="form-group">
                <div class="col-sm-12 btn-submit">
                    <button type="submit" class="btn btn-success ml-3">Create Role</button>
                </div>
            </div>
        </div>
    </form>
</div>


<style>
    .validation-summary-errors li {
        color: red;
        text-transform: uppercase;
    }

    .field-validation-error {
        color: darkred;
        text-transform: capitalize;
        font-weight: 500;
    }
</style>